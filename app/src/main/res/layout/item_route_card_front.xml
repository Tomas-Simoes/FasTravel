<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="12dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/frontCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Imagem da rota (ocupa metade superior do card) -->
        <ImageView
            android:id="@+id/routeImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:contentDescription="Route image" />

        <!-- Ãrea colorida com texto (metade inferior) -->
        <LinearLayout
            android:id="@+id/coloredSection"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp"
            android:gravity="center">

            <TextView
                android:id="@+id/titleFront"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/descriptionFront"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:alpha="0.9"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/durationFront"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@android:color/white"
                android:background="@drawable/tag_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>