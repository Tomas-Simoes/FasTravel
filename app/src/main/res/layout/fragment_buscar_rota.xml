<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <FrameLayout
            android:id="@+id/menu_fab_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="140dp"
            android:layout_gravity="bottom|end">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_themed_routes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="180dp"
                android:src="@drawable/ic_themedroutes"
                app:fabSize="normal"
                app:tint="@android:color/white"
                app:backgroundTint="#63B3ED"
                android:visibility="gone"
                android:alpha="0"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_3"
                style="@style/Widget.App.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="180dp"
                android:src="@drawable/ic_settings"
                app:fabSize="normal"
                android:visibility="gone"
                android:alpha="0"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_2"
                style="@style/Widget.App.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="120dp"
                android:src="@drawable/ic_history"
                app:fabSize="normal"
                app:tint="@android:color/white"
                app:backgroundTint="#63B3ED"
                android:visibility="gone"
                android:alpha="0"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_1"
                style="@style/Widget.App.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="60dp"
                android:src="@drawable/ic_person"
                app:fabSize="normal"
                app:tint="@android:color/white"
                app:backgroundTint="#63B3ED"
                android:visibility="gone"
                android:alpha="0"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/fab_main"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="bottom|end"
                app:cardCornerRadius="28dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/fab_main"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/tv_iniciais"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="JD"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"/>
            </com.google.android.material.card.MaterialCardView>

        </FrameLayout>
    </FrameLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_navigation"
        style="@style/Widget.App.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/navigation_gradient_bg"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/nav_icon_background">

                    <ImageView
                        android:id="@+id/iv_nav_direction"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_navigation_arrow"
                        android:tint="@color/white" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Próxima direção"
                        android:textSize="12sp"
                        android:textColor="?attr/android:textColorSecondary"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Em 200 m"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/android:textColorPrimary"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_nav_instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vire à direita na Rua da República"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/android:textColorPrimary"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/nav_info_background"
                android:padding="12dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_info"
                    android:tint="?attr/colorPrimary"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tv_nav_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Depois continue em frente por 500 m"
                    android:textSize="13sp"
                    android:textColor="?attr/android:textColorSecondary"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottom_sheet"
        style="@style/Widget.App.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="32dp"
        app:cardElevation="16dp"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:behavior_hideable="false"
        app:behavior_peekHeight="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center"
                android:paddingTop="12dp">

                <View
                    android:layout_width="48dp"
                    android:layout_height="4dp"
                    android:background="@drawable/handle_shape"
                    android:alpha="0.3" />
            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/bottom_sheet_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="32dp">

                    <com.google.android.material.card.MaterialCardView
                        style="@style/Widget.App.CardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="?attr/colorOutline">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/til_ponto_a"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="44dp"
                                    android:layout_height="44dp"
                                    app:cardCornerRadius="22dp"
                                    app:cardElevation="0dp"
                                    app:cardBackgroundColor="?attr/colorPrimary">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_circle"
                                        app:tint="@color/white" />
                                </com.google.android.material.card.MaterialCardView>

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_ponto_a"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="16dp"
                                    android:hint="Starting point"
                                    android:textSize="15sp"
                                    android:textColor="?attr/android:textColorPrimary"
                                    android:textColorHint="?attr/android:textColorHint"
                                    android:fontFamily="sans-serif-medium"
                                    android:background="@android:color/transparent"
                                    android:inputType="text" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginStart="76dp"
                                android:background="?attr/colorOutline"
                                android:alpha="0.3" />

                            <LinearLayout
                                android:id="@+id/til_ponto_b"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="44dp"
                                    android:layout_height="44dp"
                                    app:cardCornerRadius="22dp"
                                    app:cardElevation="0dp"
                                    app:cardBackgroundColor="@color/secondary_green">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_location"
                                        app:tint="@color/white" />
                                </com.google.android.material.card.MaterialCardView>

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_ponto_b"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="16dp"
                                    android:hint="Where to?"
                                    android:textSize="15sp"
                                    android:textColor="?attr/android:textColorPrimary"
                                    android:textColorHint="?attr/android:textColorHint"
                                    android:fontFamily="sans-serif-medium"
                                    android:background="@android:color/transparent"
                                    android:inputType="text" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_inverter"
                        style="@style/Widget.App.Button.Outlined"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_gravity="end"
                        android:layout_marginBottom="20dp"
                        android:text="Swap"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        app:icon="@drawable/ic_swap"
                        app:iconGravity="start"
                        app:iconPadding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Favorites"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?attr/android:textColorPrimary"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:layout_marginBottom="24dp">

                        <LinearLayout
                            android:id="@+id/container_favoritos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingEnd="8dp">

                            <LinearLayout
                                android:id="@+id/favorito_casa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:paddingStart="0dp"
                                android:paddingEnd="20dp"
                                android:background="?attr/selectableItemBackgroundBorderless">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    app:cardCornerRadius="32dp"
                                    app:cardElevation="2dp"
                                    app:strokeWidth="1dp"
                                    app:strokeColor="?attr/colorOutline"
                                    app:cardBackgroundColor="?attr/colorSurface">

                                    <ImageView
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_home"
                                        app:tint="?attr/colorPrimary" />
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Casa"
                                    android:textSize="12sp"
                                    android:textColor="?attr/android:textColorSecondary"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:id="@+id/text_subtitulo_casa"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Adicionar"
                                    android:textSize="10sp"
                                    android:textColor="?attr/colorPrimary"
                                    android:layout_marginTop="2dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/favorito_trabalho"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:paddingEnd="20dp"
                                android:background="?attr/selectableItemBackgroundBorderless">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    app:cardCornerRadius="32dp"
                                    app:cardElevation="2dp"
                                    app:strokeWidth="1dp"
                                    app:strokeColor="?attr/colorOutline"
                                    app:cardBackgroundColor="?attr/colorSurface">

                                    <ImageView
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_work"
                                        app:tint="@color/secondary_green" />
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Trabalho"
                                    android:textSize="12sp"
                                    android:textColor="?attr/android:textColorSecondary"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:id="@+id/text_subtitulo_trabalho"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Adicionar"
                                    android:textSize="10sp"
                                    android:textColor="?attr/colorPrimary"
                                    android:layout_marginTop="2dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/btn_adicionar_favorito"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="?attr/selectableItemBackgroundBorderless">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    app:cardCornerRadius="32dp"
                                    app:cardElevation="2dp"
                                    app:strokeWidth="2dp"
                                    app:strokeColor="?attr/colorOutline"
                                    app:cardBackgroundColor="?attr/colorSurface">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_add"
                                        app:tint="?attr/android:textColorSecondary" />
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Adicionar"
                                    android:textSize="12sp"
                                    android:textColor="?attr/android:textColorSecondary"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="sans-serif-medium" />
                            </LinearLayout>

                        </LinearLayout>
                    </HorizontalScrollView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transport Mode"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?attr/android:textColorPrimary"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_transporte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:singleSelection="true"
                        app:selectionRequired="true"
                        app:chipSpacingHorizontal="8dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_carro"
                            style="@style/Widget.App.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/chip_text_color"
                            android:checked="true"
                            app:chipStrokeWidth="1dp"
                            app:chipCornerRadius="28dp"
                            app:chipMinHeight="56dp"
                            app:chipIconSize="32dp"
                            app:chipStartPadding="12dp"
                            app:chipEndPadding="12dp"
                            app:iconStartPadding="0dp"
                            app:iconEndPadding="0dp"
                            app:textStartPadding="0dp"
                            app:textEndPadding="0dp"
                            app:chipIconVisible="true"
                            app:chipIcon="@drawable/ic_car"
                            app:checkedIconVisible="false" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_pe"
                            style="@style/Widget.App.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            app:chipStrokeWidth="1dp"
                            app:chipCornerRadius="28dp"
                            app:chipMinHeight="56dp"
                            app:chipIconSize="32dp"
                            app:chipStartPadding="12dp"
                            app:chipEndPadding="12dp"
                            app:iconStartPadding="0dp"
                            app:iconEndPadding="0dp"
                            app:textStartPadding="0dp"
                            app:textEndPadding="0dp"
                            app:chipIconVisible="true"
                            app:chipIcon="@drawable/ic_walk"
                            app:checkedIconVisible="false" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_comboio"
                            style="@style/Widget.App.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            app:chipStrokeWidth="1dp"
                            app:chipCornerRadius="28dp"
                            app:chipMinHeight="56dp"
                            app:chipIconSize="32dp"
                            app:chipStartPadding="12dp"
                            app:chipEndPadding="12dp"
                            app:iconStartPadding="0dp"
                            app:iconEndPadding="0dp"
                            app:textStartPadding="0dp"
                            app:textEndPadding="0dp"
                            app:chipIconVisible="true"
                            app:chipIcon="@drawable/ic_train"
                            app:checkedIconVisible="false" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_bicicleta"
                            style="@style/Widget.App.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            app:chipStrokeWidth="1dp"
                            app:chipCornerRadius="28dp"
                            app:chipMinHeight="56dp"
                            app:chipIconSize="32dp"
                            app:chipStartPadding="12dp"
                            app:chipEndPadding="12dp"
                            app:iconStartPadding="0dp"
                            app:iconEndPadding="0dp"
                            app:textStartPadding="0dp"
                            app:textEndPadding="0dp"
                            app:chipIconVisible="true"
                            app:chipIcon="@drawable/ic_bike"
                            app:checkedIconVisible="false" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_autocarro"
                            style="@style/Widget.App.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            app:chipStrokeWidth="1dp"
                            app:chipCornerRadius="28dp"
                            app:chipMinHeight="56dp"
                            app:chipIconSize="32dp"
                            app:chipStartPadding="12dp"
                            app:chipEndPadding="12dp"
                            app:iconStartPadding="0dp"
                            app:iconEndPadding="0dp"
                            app:textStartPadding="0dp"
                            app:textEndPadding="0dp"
                            app:chipIconVisible="true"
                            app:chipIcon="@drawable/ic_bus"
                            app:checkedIconVisible="false" />
                    </com.google.android.material.chip.ChipGroup>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_encontrar_rota"
                        style="@style/Widget.App.Button.Primary"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Find Routes"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:background="@drawable/button_gradient_primary"
                        app:backgroundTint="@null"
                        app:icon="@drawable/ic_search"
                        app:iconGravity="textStart"
                        app:iconTint="@color/white"
                        app:iconSize="20dp"
                        app:iconPadding="8dp"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:layout_marginBottom="24dp"
                        android:elevation="6dp"
                        android:stateListAnimator="@null" />

                    <TextView
                        android:id="@+id/tv_resultados_titulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Route Suggestions"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/android:textColorPrimary"
                        android:fontFamily="sans-serif-medium"
                        android:visibility="gone"
                        android:layout_marginBottom="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_rotas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:visibility="gone"
                        android:clipToPadding="false" />

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>