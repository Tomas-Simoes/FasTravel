<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encontrar Rota Mais Rápida"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:textColor="@android:color/black" />

        <!-- Input Ponto A -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ponto de Partida (A)"
            android:layout_marginBottom="16dp"
            app:startIconDrawable="@android:drawable/ic_menu_mylocation">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_ponto_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Input Ponto B -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Destino (B)"
            android:layout_marginBottom="24dp"
            app:startIconDrawable="@android:drawable/ic_dialog_map">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_ponto_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Seleção de Transporte -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modo de Transporte"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:textColor="@android:color/black" />

        <RadioGroup
            android:id="@+id/radio_group_transporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/radio_comboio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comboio"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radio_uber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uber" />

            <RadioButton
                android:id="@+id/radio_autocarro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autocarro" />

            <RadioButton
                android:id="@+id/radio_misto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Misto (Todos)" />

        </RadioGroup>

        <!-- Mapa Placeholder -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <FrameLayout
                android:id="@+id/map_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E0E0E0">

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Botão Encontrar Rota -->
        <Button
            android:id="@+id/btn_encontrar_rota"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Encontrar Rota"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50" />

    </LinearLayout>

</ScrollView>