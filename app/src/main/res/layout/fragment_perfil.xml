<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meu Perfil"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:textColor="@android:color/black" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_perfil_usuario"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/ic_person"
                    android:padding="20dp"
                    android:background="#4285F4"
                    app:tint="@android:color/white"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/text_nome_usuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="João Silva"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Portugal"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    android:textColor="#757575" />

                <TextView
                    android:id="@+id/text_email_usuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="joao.silva@email.com"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:textColor="#616161" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_editar_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Perfil"
            android:layout_marginBottom="8dp"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconGravity="textStart"
            android:textColor="@android:color/black"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_notificacoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notificações"
            android:layout_marginBottom="8dp"
            app:icon="@android:drawable/ic_popup_reminder"
            app:iconGravity="textStart"
            android:textColor="@android:color/black"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sobre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sobre o FasTravel"
            android:layout_marginBottom="8dp"
            app:icon="@android:drawable/ic_menu_info_details"
            app:iconGravity="textStart"
            android:textColor="@android:color/black"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sair da Conta"
            android:layout_marginTop="24dp"
            app:icon="@drawable/ic_logout"
            app:iconGravity="textStart"
            app:backgroundTint="#E57373"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp" />

    </LinearLayout>

</ScrollView>