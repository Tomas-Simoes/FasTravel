<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Linha de cima: ícone + título/duração -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Container do ícone com fundo colorido -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/icon_background">

                <ImageView
                    android:id="@+id/iv_mode"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:tint="#FFFFFF"
                    android:src="@android:drawable/ic_menu_directions" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rota 1 • 25 min"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#0F172A"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_clock"
                        android:tint="#64748B"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/tv_tempo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:05 → 10:32"
                        android:textSize="14sp"
                        android:textColor="#64748B"
                        android:fontFamily="sans-serif"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>
            </LinearLayout>

            <!-- Seta para indicar que é clicável -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_right"
                android:tint="#CBD5E1"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Itinerário com estilo melhorado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/itinerary_background"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_itinerario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Apanhar 706 em Av. X → sair em Y\n• Caminhar 300 m até estação Z"
                android:textSize="14sp"
                android:textColor="#475569"
                android:lineSpacingExtra="4dp"
                android:fontFamily="sans-serif"
                android:maxLines="4"
                android:ellipsize="end" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>